{
    "name": "scheduler2017",
    "cuda": true,
    "gpus": [0],
    "data_loader": {
        "data_dir": "datasets",
        "input_size": 512,
        "batch_size": 16,
        "shuffle": true,
        "workers": 5
    },
    "validation": {
        "skip_lt_epoch": 0,
        "validation_split": 0.1,
        "shuffle": true
    },
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 1e-5
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "print_step": 25,
        "monitor": "val/hmean",
        "monitor_mode": "max"
    },
    "d_model" : 384,
    "drop_out" : 0.1,
    "max_len" : 8,
    "debug": false
}
