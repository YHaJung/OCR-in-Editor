{
    "name": "CRNN",
    "cuda": true,
    "gpus": [0],
    "input": "image",
    "data_loader": {
        "data_dir": "datasets",
        "input_size": 512,
        "batch_size": 8,
        "shuffle": true,
        "workers": 8
    },
    "validation": {
        "skip_lt_epoch": 0,
        "validation_split": 0.1,
        "shuffle": true
    },
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 1e-5
    },
    "trainer": {
        "epochs": 250,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "print_step": 25,
        "monitor": "val/hmean",
        "monitor_mode": "max"
    },
    "debug": true,
    "wandb": {
        "project": "final_project",
        "name": "crnn_hp_tune"
    }
}